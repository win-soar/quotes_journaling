<div class="error-messages">
  <%= render 'shared/error_messages', object: @quote %>
</div>

<div class="quote-form">

  <%= form_with model: @quote, local: true do |form| %>
    <div><%= form.label :title, 'Your Quotes (あなたの投稿)*' %><br>
      <%= form.text_area :title, rows: 3, class: "form-control" %>
    </div><br>
    <div>
      <%= form.label :category, 'Quotes type (クォーツの種類)*' %><br>
      <% Quote.categories.each do |key, value| %>
        <%= form.radio_button :category, key, id: "category_#{key}", checked: (@quote.category.present? ? @quote.category == key : key == "historical") %>
        <label for="category_<%= key %>" data-tooltip="<%= key == 'historical' ? '歴史上の偉人' : key == 'celebrity' ? '現代の著名人' : key == 'fictional' ? '作品に登場するキャラクター' : 'あなた自身 もしくは身近な人' %>">
          <%= key.humanize %>
        </label>
      <% end %>
    </div><br>
    <div><%= form.label :author, 'Author of the Quotes (クォーツの発言者)*' %><br><%= form.text_field :author, class: "text-field" %></div><br>
    <div><%= form.label :source, 'Source of the Quotes (出典)' %><br><%= form.text_field :source, class: "text-field" %></div><br>
    <div><%= form.label :source_writer, 'writer (出典の著者)' %><br><%= form.text_field :source_writer, class: "text-field" %></div><br>
    <div><%= form.label :note, 'note (紹介内容)*' %><br><%= form.text_area :note, rows: 10, class: "form-control" %></div><br>

    <div>
      <%= check_box_tag :agree_guidelines, "1", false %>
      <%= label_tag :agree_guidelines, '引用元は正しく、著作権への問題はありません。' %>
    </div><br>

    <div><%= form.submit '投稿する', class: "btn btn-primary" %></div><br>
  <% end %>
</div>
