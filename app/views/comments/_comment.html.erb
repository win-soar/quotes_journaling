<div class="comment border rouded p-2 my-2">
  <div class="user-info">
    <%= avatar_image_tag(comment.user) %>

    <% if comment.user.present? %>
      <p><%= link_to comment.user.name, user_path(comment.user) %></p>
    <% else %>
      <p><em>退会したユーザー</em></p>
    <% end %>
  </div>
  <p><%= comment.body %></p>
  <p class="text-muted small"><%= comment.created_at.strftime('%Y/%m/%d %H:%M') %></p>
</div>