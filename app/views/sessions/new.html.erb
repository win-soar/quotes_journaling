<h1>ログイン</h1>
<%= form_with url: login_path, local: true do |form| %>
  <div>
    <%= form.label :email %><br>
    <%= form.email_field :email %>
  </div>

  <div>
    <%= form.label :password %><br>
    <%= form.password_field :password %>
  </div>

  <div>
    <%= form.submit 'ログイン' %>
  </div>

  <p>アカウントをお持ちでない場合</p>
  <%= link_to "新規作成", signup_path %>
<% end %>